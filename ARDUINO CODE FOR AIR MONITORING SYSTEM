#include <LiquidCrystal.h>

// Initialize LCD: (rs, e, d4, d5, d6, d7)
LiquidCrystal lcd(7, 6, 5, 4, 3, 2);

const int tempPin = A0;
const int gasPin = A1;

void setup() {
  lcd.begin(16, 2);
  lcd.print("Air Monitor Sys");
  delay(2000);
  lcd.clear();
}

void loop() {
  int tempReading = analogRead(tempPin);
  float temperature = (tempReading * 5.0 * 100.0) / 1024.0; // LM35

  int gasValue = analogRead(gasPin);

  lcd.setCursor(0, 0);
  lcd.print("Temp: ");
  lcd.print(temperature);
  lcd.print(" C");

  lcd.setCursor(0, 1);
  lcd.print("Gas: ");
  lcd.print(gasValue);

  delay(1000);
}
